<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.jean.jcplayer.JcPlayerView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/relativeLayout">

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="@dimen/touch_default"
            android:layout_height="@dimen/touch_default"
            android:background="@drawable/ic_play_white"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">





</LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:weightSum="1">

           <TextView
               android:id="@+id/txt_current_music"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:text="Şarkı Adı"
               android:textColor="#FFF"
               android:textStyle="bold"
                android:gravity="center"
               android:layout_marginTop="5dp"

               />


           <TextView
               android:id="@+id/txt_current_duration"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"

               android:textColor="#FFF"
               android:layout_gravity="center"
               android:gravity="center_vertical"
               android:textSize="@dimen/text_size"
               android:textAlignment="center"
               android:text="00:00"/>
       </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout"
            android:layout_centerVertical="true"
            >



            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="0dp"
                android:layout_marginBottom="3dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
